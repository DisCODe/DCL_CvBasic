<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Simple camera viewer</brief>
			<full>Simple camera viewer</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="1">
				<Component name="Source" type="CvBasic:Sequence" priority="1" bump="0">
					<param name="device">0</param>
					<param name="directory">/usr/share/pixmaps</param>
				</Component>
				
				<Component name="Processor" type="CvBasic:CvThreshold" priority="1" bump="0">
				</Component>
			</Executor>
		</Subtask>
		
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="5">
					<param name="count">1</param>
					<param name="title">Okienko</param>
				</Component>
			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_img">
			<sink>Processor.in_img</sink>		
		</Source>
		<Source name="Processor.out_img">
			<sink>Window.in_img</sink>		
		</Source>
	</DataStreams>
</Task>




